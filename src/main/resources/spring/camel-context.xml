    <!-- Importar rutas para servicio ConsultaSaldo -->
    <import resource="../routes/ConsultaSaldo/routeConsultaSaldo.xml"/>
    <import resource="../routes/ConsultaSaldo/routeCallSOAP.xml"/>
    <import resource="../routes/Pagos/routePagos.xml"/>
    <import resource="../routes/ConsultaSaldo/routeErrorConsultaSaldo.xml"/>
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <propertyPlaceholder id="placeholder" location="classpath:environment.properties"/>
        <!-- Declaracion de rutas Importadas para ConsultaSaldo-->
        <routeContextRef ref="routeConsultaSaldo"/>
        <routeContextRef ref="routeCallSOAP"/>
        <routeContextRef ref="routeErrorConsultaSaldo"/>
        <routeContextRef ref="routePagos"/>

        <!-- Declaracion de transformaciones -->
        <endpoint id="ObjectToJson" uri="dozer:ObjectToJson?sourceModel=cl.bcointer.consultasaldo.objetos.DataToReturn&amp;targetModel=cl.bcointer.consultasaldo.map.MensajeRespuestaConsultaDeSaldos&amp;marshalId=transform-json&amp;mappingFile=transformation-ObjectToJson.xml"/>
        <endpoint id="XMLtoJava" uri="dozer:XMLtoJava?sourceModel=cl.bcointer.consultasaldo.map.DATA&amp;targetModel=cl.bcointer.consultasaldo.objetos.DataToReturn&amp;unmarshalId=xmlinputtojava&amp;mappingFile=transformationXMLtoJava.xml"/>
        <dataFormats>
            <!-- Transformacion datos entrantes ConsultaSaldo -->
            <json id="jsonToObjectConsultaSaldo" library="Jackson"
                prettyPrint="true" unmarshalTypeName="cl.bcointer.consultasaldo.objetos.DataInput"/>
            <!-- Transformacion datos entrantes Pagos -->
            <json id="jsonToObjectPagos" library="Jackson"
                prettyPrint="true" unmarshalTypeName="cl.bcointer.pagos.model.InputPayment"/>
            <json id="transform-json" library="Jackson"/>
            <jaxb contextPath="cl.bcointer.consultasaldo.map" id="xmlinputtojava"/>
        </dataFormats>
        <!-- Excepcion general -->
        <onException>
            <exception>java.lang.Exception</exception>
            <handled>
                <simple>true</simple>
            </handled>
            <log message=">>>>> ERROR  GENERAL : ${exception}, ${body}, ${date:now}"/>
        </onException>
        <!--         Configuracion base REST DSL -->
        <restConfiguration bindingMode="off" component="servlet" contextPath="/api"/>
        <rest apiDocs="true" consumes="application/json" id="rest-1"
            path="/v1" produces="application/json">
            <!-- Metodo POST servicio ** CONSULTA-SALDOS ** -->
            <post id="METODO-1_Consulta-Saldos" uri="creditcard/balance">
                <to uri="direct:routeConsultaSaldos"/>
            </post>
            <!-- Metodo POST servicio ** PAYMENTS ** -->
            <post id="METODO-2_Trx-No-Facturadas" uri="creditcard/payment">
                <to uri="direct:routePayments"/>
            </post>
            
            <!-- Metodo POST servicio ** TRX NO FACTURADAS **
            <post id="METODO-2_Trx-No-Facturadas" uri="creditcard/trxnoinvoiced">
                <to uri="direct:routeTrxNoFacturadas"/>
            </post>
             -->

        </rest>
    </camelContext>
