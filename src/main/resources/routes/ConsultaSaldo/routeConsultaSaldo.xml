<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd                                 http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring-2.25.4.xsd">
    <bean class="cl.bcointer.consultasaldo.objetos.DataInput" id="dataInputConsultaSaldo"/>
    <bean class="cl.bcointer.consultasaldo.bean.DataConsultaServicio" id="loadDataConsultaServicio"/>
    <routeContext id="routeConsultaSaldo" xmlns="http://camel.apache.org/schema/spring">
        <route id="_route_ReceptionData" streamCache="true">
            <from id="_fromIR1" uri="direct:routeConsultaSaldos"/>
            <bean id="_bean1" method="loadDataCM" ref="loadDataConsultaServicio"/>
            <log id="_Log_TRAZA_REQ" loggingLevel="INFO" message=">>> [${date:now:yyyy-MM-dd'T'HH:mm:ss.SSSXXX}] [INFO] [${exchangeProperty.ID_REQ}] &quot;REQ&quot;  &quot;${headers.CamelHttpMethod} ${headers.CamelServletContextPath}&quot; &quot;0&quot; [${body}]"/>
            <doTry id="_doTry_ReceptionAndValdiateData">
                <unmarshal id="_transObjectConsultaSaldo" ref="jsonToObjectConsultaSaldo"/>
                <setProperty id="_setProperty1" propertyName="OBJECT_REQUEST">
                    <simple>${body}</simple>
                </setProperty>
                <to id="_beanValidatorConsultaSaldo" uri="bean-validator://dataInputConsultaSaldo"/>
                <doCatch id="_doCatchErrorNoData">
                    <exception>org.apache.camel.InvalidPayloadException</exception>
                    <exception>com.fasterxml.jackson.databind.JsonMappingException</exception>
                    <log id="_log_Error_UnmarshalInvalid" message="Error -> Falta Json Entrante"/>
                    <setHeader headerName="Content-Type" id="_setHeaderResp-NoJSON">
                        <constant>application/json; charset:utf-8</constant>
                    </setHeader>
                    <setProperty id="_setProperty2Invalid" propertyName="CODE_ERROR">
                        <simple>CCCS-05</simple>
                    </setProperty>
                    <setProperty id="_setPropertyInvalid3" propertyName="MSG_ERROR">
                        <simple>Falta Json entrante</simple>
                    </setProperty>
                    <setProperty id="_setProperty4Invalid" propertyName="TIMESTAMP_RESPONSE_ERROR">
                        <simple>${date:now:yyyy-MM-dd'T'HH:mm:ss.SSSXXX}</simple>
                    </setProperty>
                    <setProperty id="_setPropertyInvalid5" propertyName="CANAL">
                        <simple>-</simple>
                    </setProperty>
                    <setHeader headerName="Exchange.HTTP_RESPONSE_CODE" id="_setHeaderEx7Invalid">
                        <constant>500</constant>
                    </setHeader>
                    <to id="_toVelocityResponseJsonERRORInvalid" uri="velocity:velocity/JsonErrorCase.vm"/>
                    <stop id="_stopInvalidJson"/>
                </doCatch>
                <doCatch id="_doCatchErrorJsonInvalido">
                    <exception>com.fasterxml.jackson.core.JsonParseException</exception>
                    <log message="Error -> Consistencia de datos: ${exception}, ${body}, ${date:now}"/>
                    <log id="_log_Error_Unmarshal" message="Error -> Json Malformado"/>
                    <setProperty id="_setProperty2" propertyName="CODE_ERROR">
                        <simple>CCCS-04</simple>
                    </setProperty>
                    <setProperty id="_setProperty3" propertyName="MSG_ERROR">
                        <simple>JSON Invalido</simple>
                    </setProperty>
                    <setProperty id="_setProperty4" propertyName="TIMESTAMP_RESPONSE_ERROR">
                        <simple>${date:now:yyyy-MM-dd'T'HH:mm:ss.SSSXXX}</simple>
                    </setProperty>
                    <setProperty id="_setProperty5" propertyName="CANAL">
                        <simple>-</simple>
                    </setProperty>
                    <setHeader headerName="Exchange.HTTP_RESPONSE_CODE" id="_setHeaderEx7">
                        <constant>500</constant>
                    </setHeader>
                    <to id="_toVelocityResponseJsonERROR" uri="velocity:velocity/JsonErrorCase.vm"/>
                    <stop id="_stopJsonInvalido"/>
                </doCatch>
                <doCatch id="_doCatchErrorValidate">
                    <exception>org.apache.camel.component.bean.validator.BeanValidationException</exception>
                    <log message="Error -> Consistencia de datos: ${exception}, ${body}, ${date:now}"/>
                    <setHeader headerName="CamelExceptionHandler" id="_setHeader1Validate">
                        <simple>${exception}</simple>
                    </setHeader>
                    <setProperty id="_setProperty6" propertyName="CODE_ERROR">
                        <simple>CCCS-06</simple>
                    </setProperty>
                    <setProperty id="_setProperty7" propertyName="MSG_ERROR">
                        <simple>DATOS INVALIDOS</simple>
                    </setProperty>
                    <setProperty id="_setProperty8" propertyName="TIMESTAMP_RESPONSE_ERROR">
                        <simple>${date:now:yyyy-MM-dd'T'HH:mm:ss.SSSXXX}</simple>
                    </setProperty>
                    <setProperty id="_setProperty9" propertyName="CANAL">
                        <jsonpath>$.canal</jsonpath>
                    </setProperty>
                    <setHeader headerName="Exchange.HTTP_RESPONSE_CODE" id="_setHeaderEx7">
                        <constant>500</constant>
                    </setHeader>
                    <to id="_toVelocityResponseJsonERROR" uri="velocity:velocity/JsonErrorCaseValidate.vm"/>
                    <stop id="_stop2"/>
                </doCatch>
            </doTry>
            <log id="_log-CONSULTA-SALDOS_ValidacionCorrecta" message="*** Los datos fueron validados correctamente ***"/>
            <to id="_SetDatosParaSOAP" uri="velocity:velocity/ConsultaSaldo/DataForSOAP.vm"/>
            <log id="_log-CONSULTA-SALDOS_DatosCallSOAP" message="*** XML PARA SOAP CONSULTA-SALDOS ***\n${body}"/>
            <to id="_to_callSOAP-CONSULTA-SALDO-RESP" uri="direct:generateResponseConsultaSaldo"/>
            <!-- <to id="_to_callSOAP-CONSULTA-SALDO" uri="direct:routeConsultaSaldosSOAP"/> -->
        </route>
        <route id="_route_GenerarRespuestaCS">
            <from id="_fromGenerarRespuestaCS" uri="direct:generateResponseConsultaSaldo"/>
            <setHeader headerName="Content-Type" id="_setHeaderResp-ConsultaSaldos">
                <constant>application/json; charset:utf-8</constant>
            </setHeader>
            <to id="Delete_SetDatosResponseSOAP" uri="velocity:velocity/ConsultaSaldo/DUMMY-Response-NEXUS.vm"/>
            <setProperty id="_setProperty10" propertyName="XML_RESPONSE_NEXUS">
                <simple>${body}</simple>
            </setProperty>
            <doTry>
                <to id="_toTransformXmlToJson" uri="ref:XMLtoJava"/>
                <setProperty id="_setProperty11" propertyName="TIMESTAMP_RESPONSE">
                    <simple>${date:now:yyyy-MM-dd'T'HH:mm:ss.SSSXXX}</simple>
                </setProperty>
                <bean id="_beanSetDataINObject" method="loadDataXPATH" ref="loadDataConsultaServicio"/>
                <to id="_toTransfomObjectInResponseJson" uri="ref:ObjectToJson"/>
                <log id="_logResponseWS-CS" loggingLevel="DEBUG" message=">>>>> BODY RESPONSE Json WS-ConsultaSaldo:  \n${body}"/>
                <doCatch>
                    <exception>org.apache.camel.InvalidPayloadException</exception>
                    <exception>com.fasterxml.jackson.databind.JsonMappingException</exception>
                    <exception>com.fasterxml.jackson.core.JsonParseException</exception>
                    <setHeader headerName="Content-Type" id="_setHeaderResp-ErrorMapingResponse">
                        <constant>application/json; charset:utf-8</constant>
                    </setHeader>
                    <setProperty id="_setProperty_Code-ErrorMapingResponse" propertyName="CODE_ERROR">
                        <simple>CCCS-05</simple>
                    </setProperty>
                    <setProperty id="_setProperty_MSG-ErrorMapingResponse" propertyName="MSG_ERROR">
                        <simple>Error generando Response</simple>
                    </setProperty>
                    <setProperty id="_setProperty_DATETIME-ErrorMapingResponse" propertyName="TIMESTAMP_RESPONSE_ERROR">
                        <simple>${date:now:yyyy-MM-dd'T'HH:mm:ss.SSSXXX}</simple>
                    </setProperty>
                    <setProperty id="_setProperty-ErrorMapingResponse" propertyName="CANAL">
                        <simple>-</simple>
                    </setProperty>
                    <setHeader headerName="Exchange.HTTP_RESPONSE_CODE" id="_setHeader_HTTP-ErrorMapingResponse">
                        <constant>500</constant>
                    </setHeader>
                    <to id="_toVelocityResponseJson_-ErrorMapingResponse" uri="velocity:velocity/JsonErrorCase.vm"/>
                    <stop id="_stopInvalidJsonResponse"/>
                </doCatch>
            </doTry>
        </route>
    </routeContext>
</beans>
