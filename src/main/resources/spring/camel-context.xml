<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring-2.25.4.xsd">
    
    <!-- Importar rutas para servicio ConsultaSaldo -->
    <import resource="../routes/ConsultaSaldo/routeConsultaSaldo.xml"/>
    <import resource="../routes/ConsultaSaldo/routeCallSOAP.xml"/>
    
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <!-- Declaracion de rutas Importadas para ConsultaSaldo-->
        <routeContextRef ref="routeConsultaSaldo"/>
        <routeContextRef ref="routeCallSOAP"/>
        
	    <!-- Declaracion de transformaciones -->
	    <dataFormats>
	    	<!-- Transformacion datos entrantes ConsultaSaldo -->
	       	<json id="jsonToObjectConsultaSaldo" library="Jackson"
	                prettyPrint="true" unmarshalTypeName="cl.bcointer.consultasaldo.objetos.DataInput"/>
	    </dataFormats>
    
        <!-- Excepcion general -->
        <onException>
            <exception>java.lang.Exception</exception>
            <handled>
                <simple>true</simple>
            </handled>
            <log message="*** Exception Validation *** : ${exception}, ${body}, ${date:now}"/>
        </onException>
        
        <!--         Configuracion base REST DSL -->
        <restConfiguration bindingMode="off" component="servlet" contextPath="/rest"/>
        <rest apiDocs="true" consumes="application/json" id="rest-1"
            path="/service" produces="application/json">
            <!-- Metodo POST servicio ** CONSULTA-SALDOS ** -->
            <post id="METODO-1_Consulta-Saldos" uri="consultaSaldos">
                <to uri="direct:routeConsultaSaldos"/>
            </post>
        </rest>
    </camelContext>
</beans>
