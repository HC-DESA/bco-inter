<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://camel.apache.org/schema/spring
                        http://camel.apache.org/schema/spring/camel-spring-2.25.4.xsd">
    <routeContext id="routeCallSOAP" xmlns="http://camel.apache.org/schema/spring">
        <route id="routeCallSOAP">
            <from id="route_CallSOAP" uri="direct:routeConsultaSaldosSOAP"/>
            <to uri="velocity:velocity/ConsultaSaldo/DUMMY-Request-NEXUS.vm"/>
			<log message="antes de llamar a ws: \n${body}"/>
			<convertBodyTo type="javax.xml.transform.stream.StreamSource"></convertBodyTo>
			<log message="request cxf: \n${body}"/>
			<setHeader headerName="SOAPAction"><simple>http://tempuri.org/Add</simple></setHeader>
			<setHeader headerName="operationName"><simple>Add</simple></setHeader>
			<setHeader headerName="operationNamespace"><simple>http://tempuri.org/</simple></setHeader>
            <to uri="cxf:http://LAPTOP-UC9REG41:8088/mockCalculatorSoap?wsdlURL=wsdl/mockCalculatorSoap_1.wsdl&amp;dataFormat=PAYLOAD&amp;exchangePattern=InOut&amp;endpointName=CalculatorSoap"/>
<!--             <to uri="cxf:http://LAPTOP-UC9REG41:8088/mockCalculatorSoap?wsdlURL=wsdl/mockCalculatorSoap_1.wsdl&amp;dataFormat=PAYLOAD&amp;exchangePattern=InOut&amp;endpointName=CalculatorSoap"/> -->
<!--             <to uri="cxf:http://LAPTOP-UC9REG41:8088/mockCalculatorSoap?wsdlURL=wsdl/mockCalculatorSoap_1.wsdl&amp;dataFormat=PAYLOAD&amp;defaultOperationName=Add&amp;defaultOperationNamespace=http://tempuri.org/&amp;endpointName=CalculatorSoap"/> -->
            <convertBodyTo type="java.lang.String"></convertBodyTo>
            <log message="despues de llamar a ws: \n${body}"/>            
            <log id="_log_INFO_SOAP" message="** SET FILE MOCK RESPONSE SOAP **"/>
<!--             <to id="_SetDatosResponseSOAP" uri="velocity:velocity/ConsultaSaldo/DUMMY-Response-NEXUS.vm"/> -->
            <log id="_log_INFO_SOAP_RESPONSE" message="RESPONSE DATA OF SOAP: \n${body}"/>
<!--             <to id="_toRouteforResponseConsultaSaldos" uri="direct:generateResponseConsultaSaldo"/> -->
        </route>
    </routeContext>
</beans>
